<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gplus_color_1" />
            <stroke android:width="1dp" android:color="@color/grey_stroke_grey" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp"
                android:top="4dp" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/gplus_color_1" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp"
                android:top="4dp" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>